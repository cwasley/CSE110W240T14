<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.etduongucsd.dopeshit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.etduongucsd.dopeshit.HomeScreen"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.etduongucsd.dopeshit.MyClasses"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.etduongucsd.dopeshit.SettingsPage"
            android:label="@string/title_activity_settings_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.etduongucsd.dopeshit.WeekLectureSelection"
            android:label="@string/title_activity_week_lecture_selection"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.etduongucsd.dopeshit.AllClasses"
            android:label="@string/title_activity_all_classes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="edu.etduongucsd.dopeshit.MainActivity" />
        <activity
            android:name="edu.etduongucsd.dopeshit.uploadPage"
            android:label="@string/title_activity_upload_page"
            android:parentActivityName="edu.etduongucsd.dopeshit.HomeScreen"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.etduongucsd.dopeshit.HomeScreen" />
        </activity>
        <activity
            android:name="edu.etduongucsd.dopeshit.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="edu.etduongucsd.dopeshit.LectureList"
            android:label="@string/title_activity_lecture_list"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>